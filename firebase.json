{
  "hosting": [
    {
      "target": "test",
      "public": "build",
      "ignore": [
        "firebase.json",
        "firebase-debug.log",
        "**/.*",
        "**/node_modules/**",
        "src/**",
        "public/**",
        "plop/**",
        "mocks/**",
        "docs/**",
        "config-overrides.js",
        "json-server.json",
        "Makefile",
        "package-lock.json",
        "package.json",
        "plopfile.js",
        "README.md",
        "tsconfig.json"
      ],
      "rewrites": [
        {
          "source": "/sounds/click.wav",
          "destination": "/ounds/click.wav"
        },
        {
          "source": "/sounds/success.flac",
          "destination": "/sounds/success.flac"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "prod",
      "public": "build",
      "ignore": [
        "firebase.json",
        "firebase-debug.log",
        "**/.*",
        "**/node_modules/**",
        "src/**",
        "public/**",
        "plop/**",
        "mocks/**",
        "docs/**",
        "config-overrides.js",
        "json-server.json",
        "Makefile",
        "package-lock.json",
        "package.json",
        "plopfile.js",
        "README.md",
        "tsconfig.json"
      ],
      "rewrites": [
        {
          "source": "/sounds/click.wav",
          "destination": "/sounds/click.wav"
        },
        {
          "source": "/sounds/success.flac",
          "destination": "/sounds/success.flac"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
